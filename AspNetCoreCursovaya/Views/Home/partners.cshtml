@model AspNetCoreCursovaya.helpingClasses.PartnersAndCategory

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <partial name="header" />
    
    <main>
        <p><a href="@Url.Action("index")">Главная</a> > Партнеры</p>
        <h3 style="margin-left: 7%; margin-top: 2%; color: #522473;"><b>Юридические лица</b></h3>
        <div class="list_cardFromPartners">

            @foreach (var partner in Model.partners)
            {
                @if (Model.category_In_Partners.Any(p => p.id_partner == partner.idPartners && p.id_category == 19) && partner.link_photo != null)
                {
                    <div class="card rounded-4">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div style="display:flex;">
                                <a style="text-decoration:none; margin-left:110px; margin-right:110px" href="@Url.Action("changePartnerPage", "admin", new {idPartner = partner.idPartners, idCategory = 19})"><img style="width:30px; height:30px" src="/image/edit.png" alt="Редактировать"></a>
                                <h5><b>@partner.title_partner</b></h5>

                                <a style="text-decoration:none; margin-left:110px; margin-right:110px" href="@Url.Action("deletePartner", "admin", new {idPartner = partner.idPartners, idCategory = 19})">
                                <img style="width:30px; height:30px; " height="30" src="/image/delete.png" alt="Редактировать">
                                </a>
                            </div>
                        }
                        else
                        {
                            <h5><b>@partner.title_partner</b></h5>
                        }

                        <img src="/image/@partner.link_photo" class="card-img-top" alt="...">
                        <div class="card-body">
                            <p class="card-text">@partner.text_partner</p>
                        </div>
                        <div class="icon_from_Partners">
                            @*<a href=""><img src="/image/edit.png" alt="Документ"></a>
                            <a href=""><img src="/image/delete.png" alt="Документ"></a>*@
                        </div>
                    </div>
                }
            }

            

            <div class="card rounded-4">
                <h5><b>Некоммерческая организация <br>«Ассоциация поставщиков социальных услуг»</b></h5>
                <img src="/image/partnersImage2.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text">Приспособление к жизни, включение в окружающую социальную среду и формирование социальной мобильности...</p>
                </div>
                <div class="icon_from_Partners">
                    @*<a href=""><img src="/image/edit.png" alt="Документ"></a>
                    <a href=""><img src="/image/delete.png" alt="Документ"></a>*@
                </div>
            </div>
        </div>

        <div class="UR_people">

            @foreach (var partner in Model.partners)
            {
                if (Model.category_In_Partners.Any(p => p.id_partner == partner.idPartners && p.id_category == 19) && partner.link_photo == null)
                {
                    if (User.Identity.IsAuthenticated)
                    {
                        <div style="display:flex">
                            <a style="text-decoration:none;" href="@Url.Action("changePartnerPage", "admin", new {idPartner = partner.idPartners, idCategory = 19})">
                                <img style="width:25px; height:25px; margin-left: 100px; margin-right:0px" src="/image/edit.png" alt="Редактировать"></a>
                                    <p style="margin-left:0px; margin-top:0px"><b style="color: #522473; margin:0px">@partner.title_partner</b> @partner.text_partner</p>
                                

                                <a style="text-decoration:none; margin-left:110px; margin-right:110px" href="@Url.Action("deletePartner", "admin", new {idPartner = partner.idPartners, idCategory = 19})">
                                    <img style="width:25px; height:25px; margin:0px" height="30" src="/image/delete.png" alt="Редактировать">
                                </a>
                        </div>
                    }
                    else
                    {
                        <p><b style="color: #522473;">@partner.title_partner</b> @partner.text_partner</p>
                    }
                }
            }

        </div>
        <h3 style="margin-left: 7%; color: #522473; margin-bottom: 2%;"><b>Физические лица</b></h3>
        <div class="FIZ_people">

            @foreach (var partner in Model.partners)
            {
                if (Model.category_In_Partners.Any(p => p.id_partner == partner.idPartners && p.id_category == 18))
                {
                    if (User.Identity.IsAuthenticated)
                    {
                        <div style="display:flex">
                            <a style="text-decoration:none;" href="@Url.Action("changePartnerPage", "admin", new {idPartner = partner.idPartners, idCategory = 18})">
                                <img style="width:25px; height:25px; margin-left: 100px; margin-right:0px" src="/image/edit.png" alt="Редактировать"></a>
                            <p style="margin-left:0px; margin-top:0px"><b style="color: #522473;">@partner.title_partner</b> @partner.text_partner</p>

                            <a style="text-decoration:none; margin-left:110px; margin-right:110px" href="@Url.Action("deletePartner", "admin", new {idPartner = partner.idPartners, idCategory = 18})">
                                <img style="width:25px; height:25px; margin:0px" height="30" src="/image/delete.png" alt="Редактировать">
                            </a>
                        </div>
                    }
                    else
                    {
                        <p><b style="color: #522473;">@partner.title_partner</b> @partner.text_partner</p>
                    }
                }
            }

        </div>

    </main>

    <partial name="footer" />

</body>
</html>